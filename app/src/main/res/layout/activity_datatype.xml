<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/backdatatype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="ย้อนกลับ" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/nextdatatype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="ต่อไป" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="ชนิดของข้อมูล"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="      ชนิดข้อมูล (Data Types) หมายถึงลักษณะของข้อมูลที่ใช้ในโปรแกรม เช่น ตัวเลข, ข้อความ, อาเรย์, และ NULL โดย PHP เป็นภาษาที่ไม่ต้องการการกำหนดชนิดข้อมูลล่วงหน้า (Dynamically Typed Language) ซึ่งหมายความว่า ตัวแปรสามารถเก็บข้อมูลประเภทใดก็ได้โดยไม่ต้องประกาศชนิดข้อมูลก่อน PHP จะกำหนดชนิดข้อมูลให้เองจากค่าที่เก็บในตัวแปรนั้น ๆ"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="left"
                android:paddingTop="10sp"
                android:text="ชนิดของข้อมูล"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      1. Integer (int)"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="              ใช้สำหรับเก็บจำนวนเต็ม เช่น ตัวเลขที่ไม่มีจุดทศนิยม ตัวอย่าง $year = 2025;"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      2. Float (double)"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="              ใช้สำหรับเก็บจำนวนที่มีจุดทศนิยม ตัวอย่าง $pi = 3.14;"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      3. String"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="              ใช้สำหรับเก็บข้อความหรือชุดของตัวอักษร ตัวอย่าง $name = 'John';"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      4. Boolean"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="              ใช้สำหรับเก็บค่า จริง (true) หรือ เท็จ (false) ตัวอย่าง $is_active = true;, $is_completed = false;"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      5. Array"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="              ใช้สำหรับเก็บข้อมูลหลายๆ ค่าในตัวแปรเดียว ตัวอย่าง $fruits = ['apple', 'banana', 'cherry'];"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      6. Associative Array"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='              อาเรย์ที่ใช้คีย์เป็นชื่อแทนการใช้ดัชนี ตัวอย่าง $person = ["name" => "John", "age" => 25];'
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      7. Object"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='              ใช้สำหรับเก็บข้อมูลในรูปแบบอ็อบเจ็กต์ โดยมีคุณสมบัติ (Properties) และฟังก์ชัน (Methods) ตัวอย่าง class Car { public $brand; public $model; }
$car = new Car();'
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      8. NULL"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='              ใช้สำหรับเก็บค่า "ไม่มีค่า" หรือ "ค่าว่าง" ตัวอย่าง $value = NULL;'
                android:textSize="16sp" />
    </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu" />
</RelativeLayout>
