<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz10Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="ย้อนกลับ" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="ต่อไป" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="แบบทดสอบ : การใช้ Loop"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <!-- ข้อ 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="for loop ใช้ทำอะไร"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ans1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="ทำงานซ้ำหลายครั้งโดยไม่จำกัดจำนวน"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ทำงานซ้ำจนกว่าจะพบเงื่อนไขที่เป็นจริง"
                android:fontFamily="@font/font"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ทำงานซ้ำโดยกำหนดจำนวนการวนลูปล่วงหน้า"
                android:fontFamily="@font/font"
                android:textColor="@color/black"/>
            </RadioGroup>
            <!-- ข้อ 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="โค้ดนี้จะให้ผลลัพธ์อะไร"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      for ($i = 1; $i &lt;= 3; $i++) {"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="          echo $i . &quot; &quot;;"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      }"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ans2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="1 2 3"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 1 2"
                android:fontFamily="@font/font"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 4 7"
                android:fontFamily="@font/font"
                android:textColor="@color/black"/>
            </RadioGroup>
            <!-- ข้อ 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="while loop ใช้ทำอะไร"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ans3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ทำงานซ้ำจนกว่าจะถึงจำนวนที่กำหนด"
                android:fontFamily="@font/font"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="ทำงานซ้ำตามเงื่อนไขที่เป็นจริง"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans3_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="ใช้ในการเปรียบเทียบสองค่า"
                android:textColor="@color/black"/>
            </RadioGroup>

            <Button
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableEnd="@android:drawable/btn_star_big_on"
                android:fontFamily="@font/font"
                android:text="เช็คคำตอบ" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
