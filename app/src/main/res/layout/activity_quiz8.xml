<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz8Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="ย้อนกลับ" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="ต่อไป" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="แบบทดสอบ : การใช้ if-else"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <!-- ข้อ 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="คำสั่ง if ใน PHP ใช้เพื่อทำการตรวจสอบเงื่อนไขและทำสิ่งใด"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ans1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="แสดงผลข้อความ"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เปรียบเทียบสองค่า"
                android:fontFamily="@font/font"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ตรวจสอบเงื่อนไขและทำสิ่งที่ต้องการหากเงื่อนไขเป็นจริง"
                android:fontFamily="@font/font"
                android:textColor="@color/black"/>
            </RadioGroup>
            <!-- ข้อ 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="หากต้องการให้คำสั่ง else ทำงานเมื่อเงื่อนไขใน if เป็นเท็จ ควรเขียนอย่างไร"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ans2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="if(condition) { ... } else { ... }"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="if(condition) { ... }"
                android:fontFamily="@font/font"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="if(condition) { ... } then { ... }"
                android:fontFamily="@font/font"
                android:textColor="@color/black"/>
            </RadioGroup>
            <!-- ข้อ 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="ตัวอย่างนี้จะให้ผลลัพธ์อะไร"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      $age = 20;"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      if ($age >= 18) {"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='          echo "You are an adult.";'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      } else {"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='          echo "You are a minor.";;'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      }"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ans3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are an adult."
                android:fontFamily="@font/font"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="You are a minor."
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans3_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="$age = 20;"
                android:textColor="@color/black"/>
            </RadioGroup>
            <Button
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableEnd="@android:drawable/btn_star_big_on"
                android:fontFamily="@font/font"
                android:text="เช็คคำตอบ" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>