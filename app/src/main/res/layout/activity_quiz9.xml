<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz9Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="ย้อนกลับ" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="ต่อไป" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="แบบทดสอบ : การใช้ Switch"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <!-- ข้อ 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="คำสั่ง switch ใน PHP ใช้ทำอะไร"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/ans1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="เปรียบเทียบค่าของตัวแปรกับค่าอื่น ๆ"
                    android:textColor="@color/black" />
                <RadioButton
                    android:id="@+id/ans1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ตรวจสอบค่าของตัวแปรและดำเนินการตามกรณีที่ตรงกับเงื่อนไข"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black" />
                <RadioButton
                    android:id="@+id/ans1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="คำนวณผลลัพธ์จากตัวเลข"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black"/>
            </RadioGroup>

            <!-- ข้อ 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="โค้ดนี้จะให้ผลลัพธ์อะไร"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      $day = 2;"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="      switch ($day) {"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='          case 1:'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='              echo "Monday";'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='              break;'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='          case 2:'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='              echo "Tuesday";'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='              break;'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='          default:'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='              echo "Weekend";'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text='      }'
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/ans2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="Monday"
                    android:textColor="@color/black" />
                <RadioButton
                    android:id="@+id/ans2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuesday"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black" />
                <RadioButton
                    android:id="@+id/ans2_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weekend"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black"/>
            </RadioGroup>

            <!-- ข้อ 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:paddingTop="10dp"
                android:text="การใช้ switch คำสั่งใดใน PHP ใช้เพื่อยุติการทำงานของ case ที่ตรงกับเงื่อนไข"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ans3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="continue"
                android:fontFamily="@font/font"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="stop"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/ans3_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="break"
                android:textColor="@color/black"/>
            </RadioGroup>
            <Button
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableEnd="@android:drawable/btn_star_big_on"
                android:fontFamily="@font/font"
                android:text="เช็คคำตอบ" />
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>